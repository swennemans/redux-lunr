{
  "name": "redux-lunr",
  "version": "0.1.4",
  "description": "Lunr.js as middleware for Redux",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "directories": {
    "test": "tests"
  },
  "watch": {
    "test-dev": "*.test.js"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf lib",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack src/index.js dist/reduxLunr.js --config webpack.config.development.js",
    "build:umd:min": "webpack src/index.js dist/reduxLunr.min.js --config webpack.config.production.js",
    "build": "npm run build:lib && npm run build:umd",
    "test-dev": "NODE_ENV=test babel-node ./test/*.js | faucet",
    "prepublish": "npm run clean && npm run build",
    "watch": "npm-watch",
    "watch-test": "npm run watch -s"
  },
  "author": "Sven Roeterdink <sven.roeterdink1@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "lunr": "^0.5.12"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.25",
    "babel-loader": "^5.3.2",
    "faucet": "0.0.1",
    "rimraf": "^2.4.3",
    "tape": "^4.2.0",
    "webpack": "^1.12.2",
    "worker-loader": "^0.6.0"
  },
  "npmFileMap": [
    {
      "basePath": "/dist/",
      "files": [
        "*.js"
      ]
    }
  ],
  "dependencies": {
    "babel-core": "^5.8.25",
    "babel-loader": "^5.3.2",
    "lunr": "^0.5.12"
  }
}
